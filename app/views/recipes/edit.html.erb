<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピ編集
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @recipe, html: { multipart: true }, data: { turbo: false } do |f| %>
          <div class="field">
            <%= f.label :title, "レシピ名", class: "label" %>
            <%= f.text_field :title, class: "input #{@recipe.errors[:title].any? ? 'is-danger' : ''}" %>

            <% if @recipe.errors[:title].any? %>
              <% @recipe.errors.full_messages_for(:title).each do |message| %>
                <p class="help is-danger"><%= message %></p>
              <% end %>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :body, "作り方", class: "label" %>
            <%= f.text_area :body, class: "textarea #{@recipe.errors[:body].any? ? 'is-danger' : ''}" %>

            <% if @recipe.errors[:body].any? %>
              <% @recipe.errors.full_messages_for(:body).each do |message| %>
                <p class="help is-danger"><%= message %></p>
              <% end %>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.file_field :image, class: "input #{@recipe.errors[:image].any? ? 'is-danger' : ''}" %>
            
            <% if @recipe.errors[:image].any? %>
              <% @recipe.errors.full_messages_for(:image).each do |message| %>
                <p class="help is-danger"><%= message %></p>
              <% end %>
            <% end %>
          </div>

          <p class="mb-3">
            現在の状態：
            <% if @recipe.published? %>
              <span class="tag is-success">公開中</span>
            <% else %>
              <span class="tag is-warning">下書き</span>
            <% end %>
          </p>

          <div class="field is-grouped">
            <div class="control">
              <%= button_tag "公開する",
                    type: "submit",
                    name: "recipe[status]",
                    value: "published",
                    class: "button is-success" %>
            </div>

            <div class="control">
              <%=  button_tag "下書きに戻す",
                    type: "submit",
                    name: "recipe[status]",
                    value: "draft",
                    class: "button is-light" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>