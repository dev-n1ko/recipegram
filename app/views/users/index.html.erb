<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピグラマー一覧
      </h1>
    </div>
  </div>
</section>

<%= render "layouts/search_form", url: users_path, button_label: "ユーザー検索" %>

<% if params[:keyword].present? %>
  <h2 class="title is-4">
    「<%= params[:keyword] %>」の検索結果
  </h2>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-3">
          <div class="card" style="height:100%;">
            <div class="card-content">
              <div class="">
                <figure class="profile_image">
                  <%= link_to user_path(user) do %>
                    <% if user.image.attached? %>
                        <%= image_tag user.image, class: "avatar" %>
                    <% else %>
                        <%= image_tag "no-image.png", class: "avatar" %>
                    <% end %>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%=link_to user.username, user_path(user) %></div>
                </div>
              </div>
              <div class="content">
                投稿数：<%= user.recipes_count %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

